active_master_role          writer


<host default>
    cluster_interface       eth0

    pid_path                /var/run/mmmd_agent.pid
    bin_path                /usr/lib/mysql-mmm/

    replication_user        <%= scope.lookupvar('mysql_mmm::params::replication_user') %>
    replication_password    <%= scope.lookupvar('mysql_mmm::params::replication_password') %>

    agent_user              <%= scope.lookupvar('mysql_mmm::params::agent_user') %>
    agent_password          <%= scope.lookupvar('mysql_mmm::params::agent_password') %>
</host>
