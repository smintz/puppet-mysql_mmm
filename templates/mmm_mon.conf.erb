include mmm_common.conf

<monitor>
    ip                      127.0.0.1
    pid_path                /var/run/mmmd_mon.pid
    bin_path                /usr/libexec/mysql-mmm
    status_path             /var/lib/misc/mmmd_mon.status
    ping_ips                <%= scope.lookupvar('mysql_mmm::params::readers').join(', ') %>
</monitor>

<host default>
    monitor_user            <%= scope.lookupvar('mysql_mmm::params::monitor_user') %>
    monitor_password        <%= scope.lookupvar('mysql_mmm::params::monitor_password') %>
</host>

debug 0
